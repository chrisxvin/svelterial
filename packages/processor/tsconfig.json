{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2020"],
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules/**/*", "tests/**/*"]
}
